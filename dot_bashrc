export NVM_DIR="$HOME/.nvm"
# [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
# [ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

if [ -f ~/.git-completion.bash ]; then
  . ~/.git-completion.bash
fi

export PATH="$PATH:/Applications/WezTerm.app/Contents/MacOS:$HOME/bin"

. "$HOME/.local/bin/env"
parse_git_branch() {
  git branch 2>/dev/null | grep '^*' | sed 's/^* //'
}
YELLOW='\[\033[0;33m\]'
BLUE='\[\033[0;34m\]'
GREEN='\[\033[0;32m\]'
CYAN='\[\033[0;36m\]'
RESET='\[\033[0m\]'
git_branch() {
    local branch=$(parse_git_branch)
    if [ -n "$branch" ]; then
        echo " ($branch)"
    fi
}

PS1='\u:'"${GREEN}"'\w'"${CYAN}"'$(git_branch)'"${RESET}"'$ '
